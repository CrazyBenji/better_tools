{
    "schemaVersion": 1,
    "id": "bettertools",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contact": {
        "homepage": "https://fabricmc.net/",
        "sources": "https://github.com/FabricMC/fabric-example-mod"
    },
    "license": "${license}",
    "icon": "assets/bettertools/textures/item/iron_hammer.png",
    "environment": "*",
    "entrypoints": {
        "fabric-datagen": [
            "net.benji.bettertools.BetterToolsDataGenerator"
        ],
        "client": [
            "net.benji.bettertools.client.BetterToolsFabricClient"
        ],
        "main": [
          "net.benji.bettertools.BetterToolsFabric"
        ]
    },
    "mixins": [
        "bettertools.mixins.json",
        "bettertools.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.14",
        "fabric": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=17"
    },
    "suggests": {
        "another-mod": "*"
    }
}
  